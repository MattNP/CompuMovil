<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.udea.compumovil.gr4.lab4weather.WeatherActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appBarWeather"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBarWeather"
        android:layout_centerVertical="true"

        android:id="@+id/weatherIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_ciudad"
        android:id="@+id/ciudad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="117dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperatura"
        android:id="@+id/temperatura"
        android:layout_below="@+id/ciudad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humedad"
        android:id="@+id/humedad"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/temperatura"
        android:layout_toRightOf="@+id/weatherIcon"
        android:layout_toEndOf="@+id/weatherIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_clima"
        android:id="@+id/textView4"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/humedad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mostrar_ciudad"
        android:layout_above="@+id/temperatura"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mostrar_temperatura"
        android:layout_alignTop="@+id/temperatura"
        android:layout_alignLeft="@+id/txt_mostrar_ciudad"
        android:layout_alignStart="@+id/txt_mostrar_ciudad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mostrar_humedad"
        android:layout_alignTop="@+id/humedad"
        android:layout_alignLeft="@+id/txt_mostrar_temperatura"
        android:layout_alignStart="@+id/txt_mostrar_temperatura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mostrar_descripcion"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/txt_mostrar_humedad"
        android:layout_alignStart="@+id/txt_mostrar_humedad" />


</RelativeLayout>
